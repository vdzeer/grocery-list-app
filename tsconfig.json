{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    "strict": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
